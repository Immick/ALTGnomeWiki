{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", 
    "moduleResolution": "Bundler", 
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node", "vite/client"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@vitepress/theme/*": ["node_modules/vitepress/dist/client/theme-default/*"]
    }
  },
  "include": ["**/*.d.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
